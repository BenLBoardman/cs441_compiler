class foo [
    fields a, b

    method doStuff(x) with locals:
        !this.a = 1
        print(&this.a)
        print(&this.b)
        !this.b = &x.y
        print(&this.a)
        print(&this.b)
        return 0
]

class bar [
    fields y

    method doNil() with locals:
        return 0
]

main with bob, joe:
    bob = @bar
    !bob.y = 3
    joe = @foo
    _ = ^joe.doStuff(bob)